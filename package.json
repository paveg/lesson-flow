    "drizzle-orm": "^0.44.0",
    "ky": "^1.7.0",
    "lucide-react": "^0.468.0",
    "next": "^15.1.0",
    "postgres": "^3.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "resend": "^4.0.0",
